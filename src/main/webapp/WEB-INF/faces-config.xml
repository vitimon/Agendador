<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    <application>     
    	
    	<!-- internalization -->
    	<locale-config>
              <default-locale>ar</default-locale>
         </locale-config>
      	
        <resource-bundle>
            <base-name>internalization.labels</base-name>
            <var>labels</var>
       </resource-bundle>
       
       <resource-bundle>
            <base-name>internalization.exceptions</base-name>
            <var>exceptions</var>
       </resource-bundle>
       
       <resource-bundle>
            <base-name>internalization.messages</base-name>
            <var>messages</var>
       </resource-bundle>
       
      
    	<message-bundle>internalization.jsfMessages</message-bundle>

       <!--%internalization%-->
       
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
        
        
    </application>
</faces-config>